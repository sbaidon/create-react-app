import React from 'react'
import PropTypes from 'prop-types'
// import ImmutablePropTypes from 'react-immutable-proptypes'
import { Helmet } from 'react-helmet'
{{#if hasMessages}}
import { FormattedMessage } from 'react-intl'
{{/if}}

{{#if hasStyles}}
import styles from './styles.css'
{{/if}}
{{#if hasMessages}}
import messages from './messages'
{{/if}}

// eslint-disable-next-line react/prefer-stateless-function
class {{properCase name}} extends React.Component {
  shouldComponentUpdate(nextProps) {
    const { props } = this

    return nextProps !== props
  }

  render() {
    {{#unless hasMessages}}
    const title = '{{properCase name}}!'
    const welcome = 'Welcome to {{properCase name}}!'
    {{/unless}}
    const { intl } = this.props

    return (
      <section>
        <Helmet>
          <title>{{#if hasMessages}}{intl.formatMessage(messages.title)}{{else}}{title}{{/if}}</title>
        </Helmet>

        {{#if hasMessages}}
        <FormattedMessage {...messages.welcome} />
        {{else}}
        <p>{welcome}</p>
        {{/if}}
      </section>
    )
  }
}

{{properCase name}}.propTypes = {
  /** intl function */
  intl: PropTypes.object, // eslint-disable-line react/forbid-prop-types
}

export default {{properCase name}}
